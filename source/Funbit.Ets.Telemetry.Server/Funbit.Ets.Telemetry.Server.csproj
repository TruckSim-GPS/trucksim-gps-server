  <!-- Clean up build output: move dependencies to subdirectories for cleaner distribution -->
  <Target Name="OrganizeBuildOutput" AfterTargets="Build">
    <!-- Create subdirectories -->
    <MakeDir Directories="$(OutputPath)dependencies" />
    <MakeDir Directories="$(OutputPath)docs" />
    <MakeDir Directories="$(OutputPath)logs" />
    <MakeDir Directories="$(OutputPath)dev" />
    
    <!-- Move dependency DLLs to dependencies subdirectory -->
    <ItemGroup>
      <DependencyDlls Include="$(OutputPath)Microsoft.*.dll;$(OutputPath)System.*.dll;$(OutputPath)Owin*.dll;$(OutputPath)Newtonsoft.*.dll;$(OutputPath)log4net.dll" />
    </ItemGroup>
    <Move SourceFiles="@(DependencyDlls)" DestinationFolder="$(OutputPath)dependencies" />
    
    <!-- Move XML documentation files to docs subdirectory -->
    <ItemGroup>
      <XmlDocs Include="$(OutputPath)*.xml" />
    </ItemGroup>
    <Move SourceFiles="@(XmlDocs)" DestinationFolder="$(OutputPath)docs" />
    
    <!-- Move test telemetry file to dev subdirectory -->
    <ItemGroup>
      <TestFiles Include="$(OutputPath)Ets2TestTelemetry.json" />
    </ItemGroup>
    <Move SourceFiles="@(TestFiles)" DestinationFolder="$(OutputPath)dev" Condition="Exists('$(OutputPath)Ets2TestTelemetry.json')" />
    
    <!-- Remove PDB files in Release mode (keep only our own PDB) -->
    <ItemGroup Condition="'$(Configuration)'=='Release'">
      <UnwantedPdbs Include="$(OutputPath)Microsoft.*.pdb;$(OutputPath)System.*.pdb;$(OutputPath)Owin*.pdb;$(OutputPath)Newtonsoft.*.pdb;$(OutputPath)log4net.pdb" />
    </ItemGroup>
    <Delete Files="@(UnwantedPdbs)" Condition="'$(Configuration)'=='Release'" />
  </Target>
